{
  "name": "catalyst",
  "private": true,
  "version": "0.1.0",
  "author": "Decentraland Contributors",
  "license": "Apache-2.0",
  "workspaces": [
    "commons",
    "comms/lighthouse",
    "content",
    "contracts",
    "lambdas"
  ],
  "scripts": {
    "cleanup": "yarn workspaces run cleanup && shx rm -rf node_modules",
    "build": "yarn workspaces run build",
    "build:lambdas": "yarn workspace @catalyst/lambdas-server build",
    "build:content": "yarn workspace @catalyst/content-server build",
    "build:comms": "yarn workspace @catalyst/lighthouse-server build",
    "start": "yarn workspaces run start",
    "start:lambdas": "yarn workspace @catalyst/lambdas-server start",
    "start:content": "yarn workspace @catalyst/content-server start:db && yarn workspace @catalyst/content-server start:server",
    "start:comms": "yarn workspace @catalyst/lighthouse-server start",
    "test": "run-s 'test:*'",
    "test:lambdas": "yarn workspace @catalyst/lambdas-server test",
    "test:content": "yarn workspace @catalyst/content-server test",
    "test:comms": "yarn workspace @catalyst/lighthouse-server test",
    "test:commons": "yarn workspace @catalyst/commons test",
    "lint:fix": "eslint '**/*.{js,ts}' --fix",
    "lint:check": "eslint '**/*.{js,ts}'",
    "migrate": "node-pg-migrate -m content/src/migrations/scripts -j ts"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "4.17.13",
    "@types/jasmine": "3.9.1",
    "@types/morgan": "^1",
    "@types/node": "17.0.7",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/sinon": "10.0.4",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "cpy-cli": "^3.1.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jasmine": "3.9.0",
    "jasmine-core": "3.9.0",
    "jasmine-spec-reporter": "7.0.0",
    "jasmine-ts": "0.4.0",
    "karma": "6.3.4",
    "lint-staged": "12.1.4",
    "mock-socket": "8.0.5",
    "node-pg-migrate": "6.0.0",
    "npm-run-all": "4.1.5",
    "pg": "8.7.1",
    "prettier": "2.4.1",
    "shx": "0.3.3",
    "sinon": "11.1.2",
    "ts-mockito": "2.6.1",
    "ts-node": "10.2.1",
    "ts-path-mapping": "0.1.4",
    "tsc": "2.0.3",
    "typescript": "^4.4.3"
  }
}
