{
  "name": "catalyst",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "author": "Decentraland Contributors",
  "workspaces": [
    "content",
    "lambdas"
  ],
  "scripts": {
    "cleanup": "yarn workspaces run cleanup && shx rm -rf node_modules",
    "build": "yarn workspaces run build",
    "build:lambdas": "yarn workspace @catalyst/lambdas-server build",
    "build:content": "yarn workspace @catalyst/content-server build",
    "start": "yarn workspaces run start",
    "start:lambdas": "yarn workspace @catalyst/lambdas-server start",
    "start:content": "yarn workspace @catalyst/content-server start:db && yarn workspace @catalyst/content-server start:server",
    "test": "run-s 'test:*'",
    "test:lambdas": "yarn workspace @catalyst/lambdas-server test",
    "test:content": "yarn workspace @catalyst/content-server test",
    "lint:fix": "eslint '**/*.{js,ts}' --fix",
    "lint:check": "eslint '**/*.{js,ts}'",
    "migrate": "node-pg-migrate -m content/src/migrations/scripts -j ts"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "dependencies": {
    "@dcl/catalyst-api-specs": "1.2.2",
    "@dcl/catalyst-contracts": "1.0.2",
    "@dcl/catalyst-node-commons": "1.0.3",
    "@dcl/schemas": "4.6.0",
    "@dcl/urn-resolver": "1.3.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dcl-catalyst-commons": "^8.2.0",
    "dcl-crypto": "2.3.0",
    "express": "4.18.0",
    "express-openapi-validator": "4.13.7",
    "fp-future": "^1.0.1",
    "log4js": "6.4.6",
    "lru-cache": "7.8.1",
    "morgan": "1.10.0",
    "ms": "2.1.3",
    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "@types/compression": "^1",
    "@types/cors": "^2",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/lru-cache": "7.6.1",
    "@types/morgan": "^1",
    "@types/node": "17.0.29",
    "@types/node-fetch": "3.0.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/sinon": "10.0.11",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.7",
    "lint-staged": "12.4.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "shx": "0.3.4",
    "sinon": "13.0.2",
    "ts-jest": "27.1.4",
    "ts-mockito": "2.6.1",
    "ts-node": "10.7.0",
    "tsc": "2.0.4",
    "typescript": "^4.4.3",
    "jest-junit": "^13.0.0"
  },
  "jest-junit": {
    "addFileAttribute": "true"
  }
}
