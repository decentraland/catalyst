{
  "defaultSeverity": "error",
  "extends": ["tslint-eslint-rules"],
  "jsRules": {},
  "rules": {
    "no-floating-promises": true,
    "prefer-const": true,
    "triple-equals": true,
    "no-shadowed-variable": true,
    "object-literal-shorthand": true
  },
  "rulesDirectory": [],
  "linterOptions": {
    "include": ["content/**/*.ts", "comms/**/*.ts", "lambdas/**/*.ts"],
    "exclude": ["test/**", "**/*_protobuf.ts"]
  }
}
