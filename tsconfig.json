{
  "bazelOpts": {
    "es5Mode": true,
    "devmodeTargetOverride": "es2017"
  },
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "diagnostics": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "strictNullChecks": true,
    "pretty": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["es2017", "dom", "esnext.asynciterable", "esnext"],
    "paths": {
      "@katalyst/content/*": ["content/src/*"],
      "@katalyst/lambdas/*": ["lambdas/src/*"],
      "@katalyst/test-helpers/*": ["content/test/helpers/*"],
      "decentraland-katalyst-contracts/*": ["contracts/*"],
      "decentraland-katalyst-commons/*": ["commons/servers/*"],
      "decentraland-catalyst-utils/*": ["commons/utils/*"]
    }
  },
  "exclude": ["node_modules", "bazel-*", "**/node_modules/*", "dist"]
}
